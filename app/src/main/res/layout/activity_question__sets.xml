<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="15dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <android.support.v7.widget.CardView
                android:id="@+id/pdfview_java_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:onClick="java"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#011d49"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_java"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"/>-->


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Java"
                        android:textColor="#ffffff"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/pdfview_os_question"
                android:layout_width="380dp"
                android:layout_height="110dp"
                app:cardCornerRadius="10dp"
                android:onClick="os"
                android:layout_margin="10dp"
                android:background="#243b55"
                android:clickable="true"
                android:elevation="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                tools:ignore="KeyboardInaccessibleWidget">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#03827f"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Operating"
                            android:textColor="#ffffff"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/for_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="System"
                            android:textColor="#ffffff"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/pdfview_or_question"
                android:layout_width="380dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:background="#ffffff"
                app:cardCornerRadius="10dp"
                android:onClick="or"
                android:clickable="true"
                android:elevation="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                tools:ignore="KeyboardInaccessibleWidget">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#091907"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/for_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Operation"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/for_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Research"
                            android:textSize="35sp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pdfview_eco_question"
                android:layout_width="380dp"
                android:layout_height="110dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:clickable="true"
                android:onClick="economic"
                android:elevation="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                tools:ignore="KeyboardInaccessibleWidget">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#c12003"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/for_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Economics"
                        android:textSize="40sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/pdfview_cg_question"
                android:layout_width="380dp"
                app:cardCornerRadius="10dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:onClick="cg"
                android:clickable="true"
                android:elevation="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                tools:ignore="KeyboardInaccessibleWidget">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#070707"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/for_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Computer"
                            android:textColor="#fff"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/for_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Graphics"
                            android:textColor="#fff"
                            android:textSize="35sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pdfview_dbms_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:onClick="dbms"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:clickable="true"
                android:elevation="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                tools:ignore="KeyboardInaccessibleWidget">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#5503a8">

                    <TextView
                        android:id="@+id/for_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DBMS"
                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="#D3D3D3" />

    </LinearLayout>


</ScrollView>